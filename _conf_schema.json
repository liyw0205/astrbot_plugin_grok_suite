{
    "grok_api_url": {
        "description": "Grok API 地址",
        "hint": "只需填写基础 URL，如: https://api.x.ai，会自动拼接接口路径",
        "type": "string",
        "default": "https://api.x.ai"
    },
    "grok_api_key": {
        "description": "Grok API 密钥",
        "hint": "请填写你的 API 密钥",
        "type": "string",
        "default": ""
    },
    "grok_image_model": {
        "description": "文生图模型",
        "hint": "图像生成模型，默认 grok-imagine-1.0",
        "type": "string",
        "default": "grok-imagine-1.0"
    },
    "grok_edit_model": {
        "description": "图生图模型",
        "hint": "图像编辑模型，默认 grok-imagine-1.0-edit",
        "type": "string",
        "default": "grok-imagine-1.0-edit"
    },
    "grok_video_model": {
        "description": "视频模型",
        "hint": "视频生成模型，默认 grok-imagine-1.0-video",
        "type": "string",
        "default": "grok-imagine-1.0-video"
    },
    "grok_search_model": {
        "description": "对话/搜索模型",
        "hint": "默认 grok-4-fast",
        "type": "string",
        "default": "grok-4-fast"
    },
    "grok_search_mode": {
        "description": "搜索模式",
        "hint": "auto=模型自动判断是否联网, on=始终联网, off=纯对话不联网",
        "type": "string",
        "default": "auto"
    },
    "grok_search_enable_thinking": {
        "description": "对话思考模式",
        "hint": "开启后会附带 reasoning 参数",
        "type": "bool",
        "default": true
    },
    "grok_search_thinking_budget": {
        "description": "对话思考预算",
        "hint": "仅在开启思考模式时生效",
        "type": "int",
        "default": 32000
    },
    "grok_search_timeout_seconds": {
        "description": "对话超时时间（秒）",
        "hint": "默认 60 秒",
        "type": "int",
        "default": 60
    },
    "grok_search_show_sources": {
        "description": "显示来源链接",
        "hint": "开启后在结果中附加来源链接",
        "type": "bool",
        "default": false
    },
    "grok_search_max_sources": {
        "description": "最多显示来源数量",
        "hint": "0 表示不限制",
        "type": "int",
        "default": 5
    },
    "grok_search_extra_body": {
        "description": "对话额外请求体（JSON）",
        "hint": "例如: {\"max_tokens\":4096}",
        "type": "text",
        "default": "{}"
    },
    "grok_search_extra_headers": {
        "description": "对话额外请求头（JSON）",
        "hint": "例如: {\"X-Trace-Id\":\"your-id\"}",
        "type": "text",
        "default": "{}"
    },
    "grok_search_enable_skill": {
        "description": "启用 Skill 模式（禁用 LLM Tool）",
        "hint": "当你已安装 grok-search skill 脚本时开启",
        "type": "bool",
        "default": false
    },
    "save_media": {
        "description": "保存媒体文件",
        "hint": "开启后图片和视频将保存到本地",
        "type": "bool",
        "default": false
    },
    "user_whitelist": {
        "description": "用户白名单",
        "hint": "允许使用此插件的用户ID列表，为空则不限制",
        "type": "list",
        "items": {"type": "string"},
        "default": []
    },
    "user_blacklist": {
        "description": "用户黑名单",
        "hint": "禁止使用此插件的用户ID列表",
        "type": "list",
        "items": {"type": "string"},
        "default": []
    },
    "group_whitelist": {
        "description": "群聊白名单",
        "hint": "允许使用此插件的群聊ID列表，为空则不限制",
        "type": "list",
        "items": {"type": "string"},
        "default": []
    },
    "group_blacklist": {
        "description": "群聊黑名单",
        "hint": "禁止使用此插件的群聊ID列表",
        "type": "list",
        "items": {"type": "string"},
        "default": []
    }
}
